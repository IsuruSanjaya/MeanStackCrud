#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" // this line tells the system to use the node version installed on the system "$basedir/../riddles-cli/index.js" "$@"
else 
  exec node // this line tells the system to use the node version installed on the system "$basedir/../riddles-cli/index.js" "$@"
fi
